<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="nav">
      <a href="/feed"><i class="ri-pinterest-line"></i></a>
      <div class="navItems">
        <a href="/feed"><i class="ri-news-line"></i></a>
        <a href="/logout"><h5 class="logoutText">Logout</h5></a>
      </div>
    </nav>
    <div class="mainContainer">
      <form
        hidden
        class="uploadForm"
        action="/fileUpload"
        method="post"
        enctype="multipart/form-data"
      >
        <input type="file" name="image" />
      </form>
      <div class="mainCard">
        <div class="profileEdit">
          <div class="profile-picture">
            <img
              src="/images/uploads/<%= user.profileImage %>"
              alt="Profile Picture"
            />
          </div>
          <span class="editSpan"><i class="editIcon ri-pencil-fill"></i></span>
        </div>
        <h2 class="name"><%= user.fullName %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline">Lorem ipsum dolor sit.</p>
        <p class="description">
          Lorem ipsum dolor sit amet consectetur adipisicing.
        </p>
        <a href="/logout" class="button">Logout</a>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input class="profileCaption" type="text" name="caption" placeholder="Caption" required/>
          <input class="chooseUpload" type="file" name="file" />
          <button type="submit" class="button">Upload</button>
        </form>
      </div>
    </div>
    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post) { %>
        <div class="card" style="width: 15rem">
          <img
            src="/images/uploads/<%= post.image %>"
            class="card-img-top"
            alt="post"
          />
          <div class="card-body">
            <h5 class="card-title"><%= post.postText %></h5>
          </div>
        </div>
        <%})%>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
      document
        .querySelector(".profileEdit span")
        .addEventListener("click", () => {
          document.querySelector(".uploadForm input").click();
        });
      document
        .querySelector(".uploadForm input")
        .addEventListener("change", () => {
          document.querySelector(".uploadForm").submit();
        });
    </script>
  </body>
</html>
